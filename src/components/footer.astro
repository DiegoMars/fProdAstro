@media screen and (min-width: 780px){ /* At md breakpoint, apply styles */
  #footerEverything {
    justify-content: center;
    flex-direction: row;
    gap: 0;
  }
  #footerIcons {
    width: 50%;
    justify-content: center;
    display: flex;
    flex-direction: column-reverse;
    gap: 2rem;
  }
  #footerSocials,
  #footersProf {
    width: 210px;
    margin: 0 auto;
  }
}
@media screen and (min-width: 1200px){ /* At xl breakpoint, apply styles */
  #footerEverything {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
  }
  #footerName {
    justify-content: center;
    width: 33%;
  }
  #footerIcons {
    flex-direction: row-reverse;
    padding-top: 0;
    gap: 0;
    width: 66%;
  }
  #footerSocials {
    padding: 0;
    margin: 0 auto;
  }
  #footersProf {
    padding: 0;
    margin: 0 auto;
  }
}
</style>
