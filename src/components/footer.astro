<style>
footer {
  padding: 2rem;
  background-color: var(--accent);
  color: var(--text);
}
#footerEverything {
  display: flex;
  flex-direction: column;
  padding-bottom: 1rem;
  gap: 0.5rem;
}
#footerName {
  margin: auto 0;
}
#footerName > p {
  margin: 0;
}
.name {
  display: flex;
  align-items: center;
  padding: 0;
}
.name img {
  padding: 0.25rem 0 0 0.5rem;
}
#footerIcons {
  display: flex;
  flex-direction: column-reverse;
  gap: 0.5rem;
}
.socials {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.socials img {
  height: 23px;
  display: flex;
  align-items: center;
  padding-right: 0.25rem;
}
.socials a {
  padding-right: 0.75rem;
  padding: 0.5rem 0.75rem 0.5rem 0;
}
.prof {
  display: flex;
  align-items: center;
  color: var(--text);
  text-decoration: none;
}
.prof > p{
  margin: 0px;
}
.copyright {
  margin: 0;
  color: var(--text-500);
  text-align: center;
}

/* Media Queries */
