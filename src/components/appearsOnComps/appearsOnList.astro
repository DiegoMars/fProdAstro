---
import { getCollection } from 'astro:content';

const AppearsOn = await getCollection('mediaFeatures');
const OrderedFeat = AppearsOn
  .map((media) => ({
    ...media,
    dateObj: new Date(media.data.date),
  }))                                                         // Add date object
  .sort((a, b) => b.dateObj.getTime() - a.dateObj.getTime()); // Newest first
const typeColorMap = {
  Video: "var(--accent-700)",
  Article: "var(--primary)",
  Podcast: "var(--secondary)",
  Interview: "var(--accent-800)",
};
const textColorMap = {
  Article: "var(--text-900)",
};
---
<section class="list">
  {OrderedFeat.map(Feature => (
    <a class="card" href={Feature.data.url} target="_blank">
      <img
        src={Feature.data.thumbnail.url}
        alt={Feature.data.thumbnail.alt}
        class="img"
      />
      <div class="description">
        <div class="title">
        <p
          class="type"
          style={`
            --tag-bg: ${typeColorMap[Feature.data.type as keyof typeof typeColorMap] || 'gray'};
            --tag-hover-color: ${textColorMap[Feature.data.type as keyof typeof textColorMap] || 'var(--primary)'};
        `}>
          {Feature.data.type}
        </p>
          <h5>{Feature.data.title}</h5>
        </div>
        <p class="time">{Feature.data.platform} â€¢ {Feature.data.date}</p>
      </div>
    </a>
  ))}
</section>

<style>
.list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  background-color: var(--secondary);
  padding: 2rem;
  gap: 1.5rem;
}

.card {
  display: flex;
  flex-direction: column;
  transition: 0.3s;
  color: var(--text);
  text-decoration: none;
  height: 100%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius: 1rem;
  overflow: hidden;
}

.card:hover {
  color: var(--primary);
}

.img {
  width: 100%;
  aspect-ratio: 16/9;
  object-fit: cover;
}

.description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: var(--background);
  padding: 1rem;
  height: 100%;
}

.type{
  display: inline-block;
  padding: 0.5rem;
  margin-top: 0.5rem;
  background-color: var(--tag-bg);
  transition: 0.3s;
}

.card:hover .type{
  color: var(--tag-hover-color);
}
</style>
