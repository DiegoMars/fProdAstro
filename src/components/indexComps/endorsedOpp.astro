@media screen and (min-width: 780px){ /* At md breakpoint, apply styles */
  .opps {
    max-width: 1100px;
    margin: 0 auto;
  }
  .title {
    flex-direction: row;
  }
  .main {
    flex-direction: row;
  }
  .main > img {
    width: 33%;
    max-height: 350px;
  }
  .description {
    width: 66%;
  }
  .text {
    display: block;
  }
}
