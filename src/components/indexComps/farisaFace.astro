---
import { Image } from 'astro:assets';

import Stars from '../../assets/imgs/numbers.jpeg';
// import Pfp from '../../assets/imgs/pp.png';
import Pfp from '../../assets/imgs/pfp.jpg'
---
<section class="farisa">
  <div class="hText">
    <div class="hTextB">
      <h4>Hello, I'm Farisa</h4>
    </div>
    <div class="hTextR">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
      veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
      commodo consequat.
    </div>
  </div>
  <div class="face">
    <!-- Definetly want to dim this picture down a lil bit -->
    <Image 
      src={Pfp}
      alt="Profile Picture"
    />
  </div>
</section>

<style>
.farisa {
  background-size: cover; /* Zoom to fill, crop if needed */
  background-position: center; /* Keep it centered */
  background-repeat: no-repeat;
  padding: 2rem;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column-reverse;
  margin: 0 auto;
  gap: 1rem;
}

.hText {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  height: auto;
  margin: auto 0;
}
.hTextB {
  color: var(--primary);
}
.hTextR {
  color: var(--text);
}

.face {
  margin: 0 auto;
}

.face > img {
  width: 100%;
  height: auto;
  max-width: 330px;
  border: solid var(--text) 0.5rem;
  border-radius: 50%;
}

@media screen and (min-width: 576px){ /* At sm breakpoint, apply styles */
  .farisa {
    flex-direction: row;
    gap: 1rem;
  }
  .hText {
    width: 30%;
  }
  .face {
    width: 30%;
    margin: auto 0;
  }
}
@media screen and (min-width: 780px) {
  .farisa {
    background-image: url('../../assets/imgs/numbers.jpeg');
  }
  .face > img {
    min-width: 250px;
  }
}
/* @media screen and (min-width: 1200px){ /* At xl breakpoint, apply styles */

/* } */
</style>
