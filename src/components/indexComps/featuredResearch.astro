---
import { Image } from "astro:assets";
import { getCollection } from 'astro:content';
import CardPic from "../../assets/imgs/pp.png"

const FResearch = await getCollection('farisaResearch');
console.log(FResearch);
---
<section class="fFeatRes">
  <h3>Featured Research</h3>
  <div class="carousel">
    {FResearch.map(FResearch => (
      <div class="card">
        <div class="img">
          <Image 
            src={FResearch.data.picture.url}
            alt={FResearch.data.picutre.alt}
          />
        </div>
        <div class="description">
          <div class="title">
            <h5>{FResearch.data.title}</h5>
          </div>
          <div class="subtitle">
            <p>
              {FResearch.body}
            </p>
          </div>
        </div>
      </div>
    ))}
    <a class="more" href="/farisaR">
      <img src="imgs/icons/arrow.svg">
      <h5>See more</h5>
    </a>
  </div>
</section>

<style>
.fFeatRes {
  background-color: var(--accent);
  padding: 1.5rem;
  color: var(--text);
  text-align: center;
}

.carousel  {
  padding-top: 1.5rem;
  display: flex;
  justify-content: space-evenly;
  overflow: auto;
  gap:2rem;
}

.card {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  width: 250px;
  padding: 1rem;
  background-color: var(--secondary);
  border-radius: 10px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.img > img {
  width: 100%;
  height: auto;
  width: 250px;
  border-radius: 10px;
}

.description {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  width: 250px;
  margin: 0 auto;
}

.title {
  color: var(--primary);
}

.subtitle > p{
  margin: 0;
}

.more {
  margin:auto 0;
  text-decoration: none;
  color: var(--text);
  width: 101px;
  padding: 1rem;
  background-color: var(--background);
  border-radius: 1rem;
  transition: 0.3s;
}

.more:hover {
  background-color: var(--accent-800);
  color: var(--primary);
}

.more > img {
  width: 70px;
  padding-bottom: 0.5rem;
}

