}

.more {
  margin:auto 0;
  text-decoration: none;
  color: var(--text);
  width: 101px;
  padding: 1rem;
  background-color: var(--background);
  border-radius: 1rem;
  transition: 0.3s;
}

.more:hover {
  background-color: var(--accent-800);
  color: var(--primary);
}

.more > img {
  width: 70px;
  padding-bottom: 0.5rem;
}

