---
import { getCollection } from 'astro:content';

const Research = await getCollection('studentResearch');
const OrderedR = Research.sort((a, b) => parseInt(b.data.year) - parseInt(a.data.year));
---
<section class="student-research">
  {OrderedR.map(Entry => (
    <div class="card">
      <h4>{Entry.data.title} ({Entry.data.year})</h4>
      <p class="names">By {Entry.data.students.join(", ")}</p>
      <p class="body">{Entry.body}</p>
      <div class="links">
        {Entry.data.media.map(Media => (
          <a href={Media.url} target="_blank">View {Media.type}</a>
        ))}
      </div>
    </div>
  ))}
</section>

<style>
.student-research {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  background-color: var(--secondary);
  padding: 2rem;
}

.card {
  max-width: 1100px;
  margin: 0 auto;
  padding: 1.5rem;
  color: var(--text);
  background-color: var(--accent);
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.links {
  display: flex;
  gap: 1rem;
}

.links a{
  background-color: var(--primary);
  text-decoration: none;
  color: var(--text);
  border-radius: 0.5rem;
  padding: 0.5rem;
  transition: 0.3s;
}


.links a:hover {
  background-color: var(--primary-400);
}
</style>
