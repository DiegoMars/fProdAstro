---
const {text="text"} = Astro.props;
---
<h3 class="big">{text}</h3>
<h4 class="small">{text}</h4>

<style>
.big {
  display: none;
}
.small {
  display: block;
}
h3, h4 {
  color: var(--text);
  text-align: center;
}
@media screen and (min-width: 780px){
  .big {
    display: block;
  }
  .small {
    display: none;
  }
}
</style>
